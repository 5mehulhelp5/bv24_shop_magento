<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="search.autocomplete">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="types" xsi:type="array">
                        <item name="Magento_Search" xsi:type="array">
                            <item name="component" xsi:type="string">Magento_Search/js/form-mini</item>
                            <item name="config" xsi:type="array">
                                <item name="autocomplete" xsi:type="array">
                                    <item name="searchTerms" xsi:type="array">
                                        <item name="sortOrder" xsi:type="number">10</item>
                                    </item>
                                    <item name="categories" xsi:type="array">
                                        <item name="sortOrder" xsi:type="number">20</item>
                                    </item>
                                    <item name="products" xsi:type="array">
                                        <item name="sortOrder" xsi:type="number">30</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>